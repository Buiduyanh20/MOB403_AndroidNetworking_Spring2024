<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
    <LinearLayout
        android:id="@+id/ll_itemstudent"
        android:background="@drawable/vien_comment"
        android:backgroundTint="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_itemanh"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/baseline_add_circle_24" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/tv_itemten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tên sinh viên"
                android:textColor="@android:color/holo_red_light"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_itemmasv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mã sinh viên"
                android:textSize="16dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_itememailsv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="email sinh viên"
                android:textSize="16dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_itemdiachisv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="địa chỉ sinh viên"
                android:textSize="16dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_itemtuoisv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tuoi sinh viên"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_itemedit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/baseline_colorize_24" />

        <ImageView
            android:id="@+id/img_itemdelete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/baseline_delete_24" />

    </LinearLayout>


</LinearLayout>