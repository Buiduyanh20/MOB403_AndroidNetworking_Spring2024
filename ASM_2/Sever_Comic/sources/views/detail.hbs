<style>
    body {
        font-family: Arial, sans-serif;
        padding: 20px;
    }

    h1 {
        text-align: center;
    }

    table {
        width: 80%;
        margin: 20px auto;
        border-collapse: collapse;
    }

    th,
    td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    img {
        display: block;
        margin: 0 auto;
    }

    .btn-container {
        text-align: center;
        margin-top: 20px;
    }

    .btn {
        padding: 8px 16px;
        margin: 0 5px;
        text-decoration: none;
        color: #fff;
        border-radius: 4px;
    }

    .btn-secondary {
        background-color: #6c757d;
    }

    .btn-danger {
        background-color: #dc3545;
    }

    .btn-primary {
        background-color: #007bff;
    }
</style>
<h1>Chi tiết truyện tranh</h1>
<table>
    <tr>
        <th>Ảnh bìa</th>
        <td><img src="{{comic.coverImage}}" width="100" height="100"></td>
        <td>
            <a href="/api/readComic/{{comic._id}}" target="_parent" class="btn btn-primary">Xem truyện</a>
            {{!-- <button type="button" class="btn btn-primary btn-sm ms-3"><a class="btn-edit"
                    href="user/getUserById/{{comic._id}}">Xem truyện</a></button> --}}
        </td>
    </tr>
    <tr>
        <th>Tên</th>
        <td>{{comic.name}}</td>
    </tr>
    <tr>
        <th>Mô tả</th>
        <td>{{comic.description}}</td>
    </tr>
    <tr>
        <th>Tác giả</th>
        <td>{{comic.author}}</td>
    </tr>
    <tr>
        <th>Năm xuất bản</th>
        <td>{{comic.publicationYear}}</td>
    </tr>

</table>


<h2>Danh sánh bình luận</h2>
<!-- Danh sách user -->
<table class="table table-striped table-bordered my-2">
    <thead class="bg-dark-subtle">
        <tr>
            {{!-- <th class="text-center">Mật khẩu</th> --}}
            <th class="text-center">Người comment</th>
            <th class="text-center">Nội dung</th>
            <th class="text-center">Thời gian</th>
            {{!-- <th class="text-center">Thao tác</th> --}}
        </tr>
    </thead>
    <tbody>

        {{#each comment}}
        <tr>
            <td class="text-center">{{this.user_name}}</td>
            <td class="text-center">{{this.con_tent}}</td>
            <td class="text-center">{{this.comment_time}}</td>
            {{!-- <td class="text-center">{{this.coverImage}}</td> --}}

            {{!-- <td class="text-center">
                <!-- Các nút xóa, sửa user -->
                <button type="button" class="btn btn-danger btn-sm mr-2" data-bs-toggle="modal"
                    data-bs-target="#deleteModal" data-bs-id="{{this._id}}">Xóa</button>
                <button type="button" class="btn btn-primary btn-sm ms-3"><a class="btn-edit"
                        href="user/getUserById/{{this._id}}">Sửa</a></button>
            </td> --}}
        </tr>
        {{/each}}

    </tbody>
</table>